{% extends "_layout.twig" %}

{% block title %}{{ page.title }}{% endblock %}

{% block style %}
    .color {
        display: block;
        background-color: {{ page.color }};
        width: 100%;
        height: 100%;
        text-align: center;
    }

    .color h1 {
        margin: 0;
        padding: 0;
        font-size: 10vw;
        color: {{ page.text_color }};
        text-transform: uppercase;
    }
    .color div {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
{% endblock %}

{% block content %}
    <a href="/random">
        <div class="color">
            <div>
                <h1>{{ page.title }}</h1>
            </div>
        </div>
    </a>
{% endblock %}